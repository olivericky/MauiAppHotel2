<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray300}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10"
                         Spacing="10">

        <Label Text="Sobre o App Hotel"
                FontFamily="Kalam"
                FontSize="40"
                TextColor="{StaticResource Primary}"
                HorizontalOptions="Center" />

        <Frame>
            <VerticalStackLayout>
                <Label Text="Este aplicativo foi desenvolvido para facilitar a reserva de
hospedagens em hotéis. Com uma interface amigável e recursos intuitivos,
os usuários podem selecionar o número de adultos e crianças, escolher o tipo
de suíte desejada e calcular o valor total da diária de forma rápida e eficiente."
                       FontSize="Body"
                       TextColor="{StaticResource Primary}"
                       Margin="10" />

                <Label Text="Desenvolvido por: Ricardo Luiz
                       Ano de desenvolvimento: 2025"
                       FontSize="Body"
                       TextColor="{StaticResource Primary}"
                       Margin="10" />

                <!-- Adição de botão "Voltar" -->
                <Button Text="Voltar"
                        Clicked="Button_Clicked"
                        Margin="10" />

            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>

</ContentPage>